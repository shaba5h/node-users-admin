# Application
NODE_ENV=development
PORT=3000
SESSION_SECRET=change_this_dev_secret

# Database (choose one of the options below)

# Option A: Postgres via params
DB_DIALECT=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=users_crud
DB_USER=postgres
DB_PASSWORD=

# Option B: Postgres via connection URL
# DATABASE_URL=postgres://postgres:@127.0.0.1:5432/users_crud

# Admin credentials seed defaults
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_GENDER=male # male|female
ADMIN_BIRTHDATE=1990-01-01 # ISO date (YYYY-MM-DD)
RUN_MIGRATIONS=true
RUN_SEEDS=false
SEED_USERS_COUNT=200