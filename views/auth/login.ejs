<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Admin Panel</title>
    
    <!-- CSS Styles -->
    <link rel="stylesheet" href="/public/css/main.css">
    <link rel="stylesheet" href="/public/css/components.css">
    <link rel="stylesheet" href="/public/css/pages.css">
    <link rel="stylesheet" href="/public/css/mobile.css">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="auth-body">
    <div class="auth-container">
        <div class="auth-wrapper">
            <!-- Login Card -->
            <div class="auth-card">
                <!-- Header -->
                <div class="auth-header">
                    <div class="auth-logo">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <h1 class="auth-title">Admin Panel</h1>
                    <p class="auth-subtitle">Sign in to your account</p>
                </div>
                
                <!-- Error Messages -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-error" role="alert">
                        <i class="fas fa-exclamation-circle alert-icon"></i>
                        <span class="alert-message"><%= error %></span>
                    </div>
                <% } %>
                
                <!-- Login Form -->
                <form id="loginForm" action="/login" method="POST" class="auth-form" novalidate>
                    <!-- CSRF Token -->
                    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                    
                    <!-- Username Field -->
                    <div class="form-group">
                        <label for="username" class="form-label">
                            <i class="fas fa-user form-label-icon"></i>
                            Username
                        </label>
                        <input 
                            type="text" 
                            id="username" 
                            name="username" 
                            class="form-control"
                            value="<%= typeof username !== 'undefined' ? username : '' %>"
                            placeholder="Enter username"
                            required
                            minlength="3"
                            maxlength="100"
                            autocomplete="username"
                            autofocus
                        >
                        <div class="form-feedback"></div>
                    </div>
                    
                    <!-- Password Field -->
                    <div class="form-group">
                        <label for="password" class="form-label">
                            <i class="fas fa-lock form-label-icon"></i>
                            Password
                        </label>
                        <div class="password-input-wrapper">
                            <input 
                                type="password" 
                                id="password" 
                                name="password" 
                                class="form-control"
                            placeholder="Enter password"
                                required
                                minlength="6"
                                maxlength="100"
                                autocomplete="current-password"
                            >
                            <button type="button" class="password-toggle" data-toggle="password">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <div class="form-feedback"></div>
                    </div>
                    
                    
                    <!-- Submit Button -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-sign-in-alt btn-icon"></i>
                            Sign In
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Background Pattern -->
        <div class="auth-background">
            <div class="auth-pattern"></div>
        </div>
    </div>
    
    <!-- JavaScript -->
    <script src="/public/js/main.js"></script>
    <script src="/public/js/auth.js"></script>
</body>
</html>